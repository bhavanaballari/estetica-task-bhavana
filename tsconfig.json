{
    "compilerOptions": {
      "strict": true,
      "esModuleInterop": true,
      "lib": ["dom", "es2015"],
      "jsx": "react-jsx",
      "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
  
      "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
      "exclude": ["node_modules"],
      "baseUrl": ".",
      "paths": {
        "@/components/*": ["src/components/*"],
        "@/pages/*": ["src/pages/*"],
        "@/data/*": ["src/data/*"],
        "@/redux/*": ["src/redux/*"],
        "@/theme/*": ["src/theme/*"],   
        "@/type/*": ["src/type/*"],       
        "@/public/*": ["public/*"]
      }
    }
  }
  